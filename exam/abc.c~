#include<stdio.h>
#include<time.h>
clock_t t1,t2,t3,t4;
double t,T;
int* readarr(int *a,int n)
{
	int i;
	for(i=0;i<n;i++)
	{
		printf("Enter element %d  : ",i+1);
		scanf("%d",(a+i));
	}
	return a;
}
void printarr(int a[],int n)
{
	int i;
	for(i=0;i<n;i++)
	{
		printf("%d  ",a[i]);
		
	}
	printf("\n");
    getchar();
}
void swap(int *a,int *b)
{
	int *temp=*a;
	*a=*b;
	*b=temp;
}
int* bblsort(int *a,int n)
{
	int i,j;
	for(i=0;i<n;i++)
	{
		for(j=0;j<n;j++)
		{ 
			if(*(a+i)<*(a+j))
			{
				int *temp;
				temp=*(a+i);
				*(a+i)=*(a+j);
				*(a+j)=temp;
				printarr(a,n);
			}
		}
	}
	return a;
}

void selsort(int a[],int n)
{
	int i,j,minidx;
	for(i=0;i<n;i++)
	{
		minidx=i;
		for(j=i+1;j<n;j++)
			if(a[j]<a[minidx]){
			minidx=j;
		swap(&a[minidx],&a[j]);
		printarr(a,n);
	}}
}


void printmenu()
{
	int x,n,a[20],c;
	do{
		printf("\n\n\n");
	printf("Enter the no of elements :");
	scanf("%d",&n);
	printf("enter the elements  : ");
	for(x=0;x<n;x++)
	{
		scanf("%d",&a[x]);
	}
	printf("Menu:\n1.Bubble sort\n2.Selection sort\n3.Read array\n4.Exit");
	printf("\nEnter ur choice : ");
	scanf("%d",&c);
	switch(c)
	{
		case 1: t1=clock();
				bblsort(a,n);
				printarr(a,n);
				t2=clock();
				t=(double)(t2-t1)/CLOCKS_PER_SEC;
				printf("The time taken for executing bubble sort is : %f",t);
				break;
		case 2: t3=clock();
				selsort(a,n);
				printarr(a,n);
				t4=clock();
				T=(double)(t4-t3)/CLOCKS_PER_SEC;
				printf("The time taken for executing selection sort is : %f",T);
				break;
		case 3: readarr(a,n);
				break;
		case 4: break;		
		default:printf("wrong choice");
	}
	}while(c!=3);
}
int main()
{
	printmenu();
	return 0;
}		
	 
	
